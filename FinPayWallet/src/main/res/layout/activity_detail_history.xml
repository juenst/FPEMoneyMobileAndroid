<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_cyan_400"
    tools:context=".view.app.ui.history.DetailHistoryActivity">
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Bukti Transaksi"/>
            <TextView
                android:id="@+id/closeDetailTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:text="Tutup"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginVertical="20dp"
            app:cardCornerRadius="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/transactionStatusImage"
                    android:src="@drawable/ic_struk_success_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>
                <TextView
                    android:id="@+id/transactionStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Transaksi telah berhasil"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>
                <TextView
                    android:id="@+id/transactionAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/md_cyan_400"
                    android:text="Rp 15.200"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Detail Transaksi"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Waktu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="4dp"/>
                        <TextView
                            android:text="Jenis Transaksi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="4dp"/>
                        <TextView
                            android:text="No. Transaksi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="4dp"/>
                        <TextView
                            android:text="Serial Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="4dp"/>
                        <TextView
                            android:text="Nomor Tujuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="4dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text=": "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/transactionTime"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="Selasa, 20 September 2022 20:51"/>
                            </LinearLayout>
                        </LinearLayout>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="4dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text=": "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/transactionType"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="Pulsa XL"/>
                            </LinearLayout>
                        </LinearLayout>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="4dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text=": "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/transactionNumber"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="f1289uj34r8fj8f84hf8kajdfka"/>
                            </LinearLayout>
                        </LinearLayout>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="4dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text=": "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/transactionSerialNumber"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="009389479792938948947"/>
                            </LinearLayout>
                        </LinearLayout>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="4dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text=": "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/transactionCreditReceiver"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="083815613839"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Instrumen Bayar"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="@color/md_grey_200"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:scaleType="fitCenter"
                                android:src="@drawable/logo_app_medium"
                                android:layout_width="60dp"
                                android:layout_height="16dp"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <TextView
                            android:text="Finpay Money"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="PT. Finnet Indonesia"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="10dp"
                        android:text="Telkom Landmark Tower Lantai 28\nJl. Jend. Gatot Subtroto Kav 52 Jakarta Selatan\nNPWP 02.479.391.1-062.000"/>
                    <ImageView
                        android:scaleType="fitEnd"
                        android:src="@drawable/logo_app_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>