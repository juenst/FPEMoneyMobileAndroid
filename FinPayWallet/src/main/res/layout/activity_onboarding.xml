<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.onboarding.OnboardingActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding_img" />
    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="6.5"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/logo_color"
                android:layout_width="120dp"
                android:layout_height="64dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="bottom"
            android:layout_height="wrap_content">
            <TextView
                android:text="Untuk Seluruh Kebutuhan \nTransaksi Anda."
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="4dp"/>
            <TextView
                android:text="Dimanapun dan kapanpun Anda mau, kini Finpay Money menyediakan seluruh kebutuhan taransaksi elektronik Anda"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"/>
            <Button
                android:id="@+id/buttonLogin"
                android:text="Masuk"
                android:textColor="@color/white"
                android:background="#00ACBA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="12dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Belum punya akun?"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp"/>
                <TextView
                    android:id="@+id/buttonRegister"
                    android:text="Daftar disini"
                    android:textSize="14sp"
                    android:textColor="#00ACBA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="24dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/termCondition"
                    android:text="@string/term_condition"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/md_grey_700"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>