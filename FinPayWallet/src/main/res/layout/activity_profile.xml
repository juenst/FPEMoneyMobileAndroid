<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="@color/quantum_cyan"
        android:paddingVertical="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="@string/profil_profil"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/corner_radius_horizontal_left"
                app:cornerRadius="10px"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="12dp"
                    android:text="@string/standar_profil" />
            </LinearLayout>
        </RelativeLayout>
        <Space
            android:layout_width="0px"
            android:layout_height="50px"/>

        <ImageView
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/qr_example"
            app:cornerRadius="100dp" />
        <Space
            android:layout_width="0px"
            android:layout_height="30px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:text="@string/nama_profil" />
        <Space
            android:layout_width="0px"
            android:layout_height="10px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:text="@string/noHp_profil" />

    </LinearLayout>


</ScrollView>

