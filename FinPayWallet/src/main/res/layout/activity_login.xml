<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/mainParentLogin"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00ACBA">
        <RelativeLayout
            android:paddingHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="18dp" />
            <ImageView
                android:id="@+id/backButtonLogin"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="false"
                android:src="@drawable/ic_baseline_arrow_back_24" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingHorizontal="16dp"
            android:layout_height="wrap_content">
            <Space
                android:layout_width="0dp"
                android:layout_height="28dp"/>
            <TextView
                android:text="Masuk"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Masukkan nomor HP Anda yang terdaftar di Finpay Money"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="24dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Negara"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="4dp"/>
                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/md_grey_100"
                        android:outlineSpotShadowColor="@color/transparent"
                        android:layout_width="75dp"
                        app:cardCornerRadius="4dp"
                        android:elevation="0dp"
                        android:layout_height="48dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/ic_flag_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <Space
                                android:layout_width="4dp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:text="+62"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Nomor Ponsel"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="4dp"/>
                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/md_grey_100"
                        android:outlineSpotShadowColor="@color/transparent"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="4dp"
                        android:elevation="0dp"
                        android:layout_height="48dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneNumberField"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="813xxxxxxx"
                            android:paddingHorizontal="8dp"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="@color/md_grey_300"
                            />
                        <!--                    <TextView-->
                        <!--                        android:layout_gravity="left|center"-->
                        <!--                        android:paddingHorizontal="12dp"-->
                        <!--                        android:text="85229007869"-->
                        <!--                        android:layout_width="wrap_content"-->
                        <!--                        android:layout_height="wrap_content"/>-->
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/buttonMasuk"
            android:enabled="false"
            android:layout_margin="32dp"
            android:text="Masuk"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </RelativeLayout>
</LinearLayout>