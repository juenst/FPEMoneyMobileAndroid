<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="20dp"
        android:background="#00ACBA">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textFontWeight="600"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="BPJS Kesehatan" />

        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Pelanggan" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_edittext_outline"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textfieldNmbrPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bayar Hingga Periode" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <LinearLayout
            android:id="@+id/choosePeriodeTime"
            android:layout_width="match_parent"
            android:background="@drawable/shape_edittext_outline"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/selectedPeriodeMonth"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Oktober 2022"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#00ACBA"
                android:src="@drawable/ic_chevron_down"
                />

        </LinearLayout>


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@color/white">

        <ListView
            android:id="@+id/list_credit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtNmbrPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Nomor dari Transaksi Terakhir"/>

        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_empty_state_history_transaction" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anda belum melakukan transaksi"
                android:gravity="center"
                android:textFontWeight="600"
                android:textSize="18sp"
                android:textColor="#121926" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silahkan melakukan transaksimenggunakan\nFinpay Money."
                android:gravity="center"
                android:textFontWeight="400"
                android:textSize="14sp"
                android:textColor="#4B5565" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            app:cardCornerRadius="12dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#00ACBA" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="LANJUT"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>