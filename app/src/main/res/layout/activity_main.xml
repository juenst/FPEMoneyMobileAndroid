<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Token ID :"
        android:textAlignment="center"
        app:layout_constraintVertical_bias="0.349" />

    <TextView
        android:id="@+id/tokenId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="281dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status :"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="324dp" />

    <TextView
        android:id="@+id/saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="355dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <lib.finpay.sdk.uikit.widget.MainButtonWidget
            android:layout_height="50sp"
            android:layout_width="50sp"
            app:fm_text="Top Up"
            app:fm_textColor="#ffffff"
            app:fm_textSize="10sp"
            app:fm_defaultColor="#02c9c3"
            app:fm_iconPaddingLeft="0dp"
            app:fm_iconPaddingRight="0dp"
            app:fm_radius="10dp"
            app:fm_iconPosition="top"
            app:fm_iconResource="@drawable/ic_top_up"
            app:fm_iconColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <lib.finpay.sdk.uikit.widget.MainButtonWidget
            android:layout_height="50sp"
            android:layout_width="50sp"
            app:fm_text="Kirim Uang"
            app:fm_textColor="#ffffff"
            app:fm_textSize="10sp"
            app:fm_defaultColor="#02c9c3"
            app:fm_iconPaddingLeft="0dp"
            app:fm_iconPaddingRight="0dp"
            app:fm_radius="10dp"
            app:fm_iconPosition="top"
            app:fm_iconResource="@drawable/ic_transfer"
            app:fm_iconColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <lib.finpay.sdk.uikit.widget.MainButtonWidget
            android:layout_height="50sp"
            android:layout_width="50sp"
            app:fm_text="Riwayat"
            app:fm_textColor="#ffffff"
            app:fm_textSize="10sp"
            app:fm_defaultColor="#02c9c3"
            app:fm_iconPaddingLeft="0dp"
            app:fm_iconPaddingRight="0dp"
            app:fm_radius="10dp"
            app:fm_iconPosition="top"
            app:fm_iconResource="@drawable/ic_history"
            app:fm_iconColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <lib.finpay.sdk.uikit.widget.MainButtonWidget
            android:layout_height="50sp"
            android:layout_width="50sp"
            app:fm_text="Dompet"
            app:fm_textColor="#ffffff"
            app:fm_textSize="10sp"
            app:fm_defaultColor="#02c9c3"
            app:fm_iconPaddingLeft="0dp"
            app:fm_iconPaddingRight="0dp"
            app:fm_radius="10dp"
            app:fm_iconPosition="top"
            app:fm_iconResource="@drawable/ic_wallet"
            app:fm_iconColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCorekit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call SDK Corekit"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnPairing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAIRING"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnUpgradeAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upgrade Account"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnQris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QRIS"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnTransfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transfer"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout Session Data"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

</LinearLayout>