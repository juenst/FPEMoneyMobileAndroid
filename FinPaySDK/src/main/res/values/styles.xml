<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTitleDialog" >
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextDescription" >
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="BigBoldText">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineHeight">17sp</item>
    </style>

    <style name="MediumRegularText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="lineHeight">17sp</item>
    </style>

    <style name="SmallRegularText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/warm_grey</item>
        <item name="lineHeight">17sp</item>
    </style>

    <style name="SmallerRegularText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/warm_grey</item>
        <item name="lineHeight">17sp</item>
    </style>

    <style name="TipsSummary">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/greyish</item>
        <item name="lineHeight">17sp</item>
    </style>

    <style name="TipsTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineHeight">17sp</item>
    </style>

    <style name="AlertText">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/cherry_red</item>
        <item name="lineHeight">21sp</item>
    </style>

    <style name="AlertTextQuestionnaire">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/bright_orange</item>
        <item name="lineHeight">21sp</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineHeight">17sp</item>
    </style>

    <style name="DialogDescription">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="lineHeight">21sp</item>
    </style>

    <style name="MaterialLightSubhead">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#898989</item>
    </style>
    <style name="SubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#898989</item>
    </style>

    <style name="EditTextTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="EditTextInput">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>