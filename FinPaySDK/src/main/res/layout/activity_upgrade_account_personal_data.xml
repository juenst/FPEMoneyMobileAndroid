<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="20dp"
        android:background="#00ACBA">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textFontWeight="600"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Data Diri" />

        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lengkapi Data Diri Anda"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Pastikan data diri sama dengan yang tertera pada kartu keluarga"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Masukkan Nama Ibu Kandung"
                        android:textColor="#121926"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="5dp"/>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:outlineSpotShadowColor="@color/transparent"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="4dp"
                        android:elevation="0dp"
                        android:layout_height="48dp">

                        <EditText
                            android:id="@+id/txtMotherName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Masukkan Nama Ibu Kandung"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:textColor="#121926"
                            android:maxLines="1"
                            android:lines="1"
                            android:singleLine="true"
                            android:background="@drawable/shape_edittext_outline"
                            android:textColorHint="@color/md_grey_300" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Nomor Kartu Keluarga (Opsional)"
                        android:textColor="#121926"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="5dp"/>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:outlineSpotShadowColor="@color/transparent"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="4dp"
                        android:elevation="0dp"
                        android:layout_height="48dp">

                        <EditText
                            android:id="@+id/txtKK"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Masukkan Nomor Kartu Keluarga"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:textColor="#121926"
                            android:maxLines="1"
                            android:lines="1"
                            android:singleLine="true"
                            android:background="@drawable/shape_edittext_outline"
                            android:textColorHint="@color/md_grey_300" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Kewarganegaraan"
                        android:textColor="#121926"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="5dp"/>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:outlineSpotShadowColor="@color/transparent"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="4dp"
                        android:elevation="0dp"
                        android:layout_height="48dp">

                        <EditText
                            android:id="@+id/txtNationality"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Pilih Kewarganegaraan"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:textColor="#121926"
                            android:maxLines="1"
                            android:lines="1"
                            android:singleLine="true"
                            android:background="@drawable/shape_edittext_outline"
                            android:textColorHint="@color/md_grey_300" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Email"
                        android:textColor="#121926"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="5dp"/>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:outlineSpotShadowColor="@color/transparent"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="4dp"
                        android:elevation="0dp"
                        android:layout_height="48dp">

                        <EditText
                            android:id="@+id/txtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Masukkan Email"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:textColor="#121926"
                            android:maxLines="1"
                            android:lines="1"
                            android:singleLine="true"
                            android:background="@drawable/shape_edittext_outline"
                            android:textColorHint="@color/md_grey_300" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_security" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Dengan ini saya telah membaca dan setuju dengan Syarat Ketentuan yang berlaku"
                    android:textColor="#121926"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="10dp"/>

            <Button
                android:id="@+id/btnSubmit"
                android:text="Submit"
                android:textColor="@color/white"
                android:background="#00ACBA"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>