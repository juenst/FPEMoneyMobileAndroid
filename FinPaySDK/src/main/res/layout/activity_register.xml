<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/mainParentRegister"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00ACBA">

        <RelativeLayout
            android:paddingHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="false"
                android:src="@drawable/ic_baseline_arrow_back_24" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="Buat akun Finpay Money"
                android:textColor="#1F2A5B"
                android:textFontWeight="700"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dp"/>

            <TextView
                android:text="Lengkapi data berikut untuk mendaftar."
                android:textColor="#1F2A5B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="24dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Nama Lengkap"
                    android:textColor="#121926"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="4dp"/>

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#EEE"
                    android:outlineSpotShadowColor="@color/transparent"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="4dp"
                    android:elevation="0dp"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Masukkan nama lengkap Anda"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:textColor="#121926"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:background="@android:color/transparent"
                        android:textColorHint="#EEE" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="24dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Negara"
                        android:textColor="#121926"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="4dp"/>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="#EEE"
                        android:outlineSpotShadowColor="@color/transparent"
                        android:layout_width="75dp"
                        app:cardCornerRadius="4dp"
                        android:elevation="0dp"
                        android:layout_height="48dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/ic_flag_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <Space
                                android:layout_width="4dp"
                                android:layout_height="0dp"/>

                            <TextView
                                android:text="+62"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Nomor Ponsel"
                        android:textColor="#121926"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="4dp"/>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="#EEE"
                        android:outlineSpotShadowColor="@color/transparent"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="4dp"
                        android:elevation="0dp"
                        android:layout_height="48dp">

                        <EditText
                            android:id="@+id/txtPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="813xxxxxxx"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:textColor="#121926"
                            android:background="@android:color/transparent"
                            android:textColorHint="#EEE" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btnRegister"
            android:enabled="false"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Daftar"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </RelativeLayout>
</LinearLayout>