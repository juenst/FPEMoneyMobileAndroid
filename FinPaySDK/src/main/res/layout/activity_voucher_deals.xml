<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ppob.voucher.VoucherDealsActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="20dp"
        android:background="#00ACBA">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_left" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textFontWeight="600"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Voucher Deals" />
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:background="@color/white"
        android:elevation="0.5dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Space
            android:layout_width="0dp"
            android:layout_height="8dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/shape_edittext_outline"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Space
                android:layout_width="8dp"
                android:layout_height="0dp"/>
            <ImageView
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_search_black_24dp"
                android:layout_width="24dp"
                android:layout_height="match_parent"/>
            <EditText
                android:paddingHorizontal="8dp"
                android:id="@+id/noPelangganField"
                android:layout_weight="1"
                android:hint="Cari merchant"
                android:textSize="14dp"
                android:background="@color/transparant"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="8dp"/>
    <GridView
        android:background="@color/white"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:id="@+id/idGRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="6dp"
        android:numColumns="3"
        android:verticalSpacing="6dp" />
</LinearLayout>