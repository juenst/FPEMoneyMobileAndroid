<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    style="@style/AppTheme.finpayTheme"
    android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_connect" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="64dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aktivasi Akun Finpay"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textFontWeight="700" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sambungkan akun kamu dengan Finpay Money untuk mengakses fitur yang memenuhi seluruh kebutuhan transaksi elektronik Anda"
                    android:textSize="14sp"
                    android:textFontWeight="400"
                    android:textColor="#364152"
                    android:gravity="center"
                    android:lineHeight="20sp" />


            </LinearLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_security" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dengan menghubungkan dan mengaktivasikan akun Finpay Money, Anda menyetujui Syarat dan Ketentuan layanan Finpay Money"
                    android:textSize="14sp"
                    android:textFontWeight="400"
                    android:textColor="#364152"
                    android:lineHeight="20sp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnConnect"
            app:cardBackgroundColor="#00ACBA"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="16dp"
                android:textFontWeight="600"
                android:text="Sambungkan"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>