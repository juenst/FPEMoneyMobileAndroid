        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textFontWeight="400"
                android:textColor="#9AA3B2"
                android:text="Pengaturan Akun" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
<!--                <Space-->
<!--                    android:layout_width="0px"-->
<!--                    android:layout_height="60px"/>-->
                <LinearLayout
                    android:id="@+id/buttonUbahPin"
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_lock"
                            />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="15dp"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:text="Ubah PIN" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="15dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EEE" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/deactivateBiometric"
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_fingerprint"
                            />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="15dp"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="14dp"
                                    android:textColor="@color/black"
                                    android:text="Biometrik" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="12dp"
                                    android:text="Gunakan pengenalan wajah atau sidik jari" />
                            </LinearLayout>
                            <Switch
                                android:id="@+id/switchBiometrik"
                                android:layout_width="wrap_content"
                                android:gravity="right"
                                android:layout_height="20dp"/>
                        </LinearLayout>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="20dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
