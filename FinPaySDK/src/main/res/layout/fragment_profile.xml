                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:text="FAQ" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="15dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EEE" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/buttonSyaratKetentuan"
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_terms_condition"
                            />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="15dp"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:text="Syarat dan Ketentuan" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="15dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EEE" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/buttonHubungi"
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_headshet"
                            />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="15dp"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:text="Hubungi Kami" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="15dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EEE" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/buttonRating"
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"
                            />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="15dp"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:text="Beri Kami Penilaian" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:text="Versi 1.0.0" />
                        </LinearLayout>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="15dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/buttonLogout"
            android:paddingVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:background="@color/white"
            android:textColor="#EA4335"
            android:text="KELUAR" />
        <Space
            android:layout_width="0dp"
            android:layout_height="30dp"/>
    </LinearLayout>
