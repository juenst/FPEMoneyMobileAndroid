<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_connect" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:clipToOutline="true"
                        android:background="@drawable/round_outline"
                        android:src="@drawable/logo_finpay_money" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----------"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:textFontWeight="700"
                        />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:clipToOutline="true"
                        android:background="@drawable/round_outline"
                        android:src="@drawable/logo_finpay_money" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aktivasi Akun Finpay Money"
                    android:textSize="20sp"
                    android:textFontWeight="700"
                />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sambungkan akun kamu dengan Finpay Money untuk mengakses fitur yang memenuhi seluruh kebutuhan transaksi elektronik Anda"
                    android:textSize="14sp"
                    android:textFontWeight="400"
                    android:textColor="#364152"
                    android:lineHeight="20sp"
                    />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="32dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="@color/white"
                    android:text="Hubungkan"
                    android:background="#00ACBA" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dengan menghubungkan dan mengaktivasikan akun Finpay Money, Anda menyetujui Syarat dan Ketentuan layanan Finpay Money"
                    android:textSize="14sp"
                    android:textFontWeight="400"
                    android:textColor="#364152"
                    android:lineHeight="20sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>